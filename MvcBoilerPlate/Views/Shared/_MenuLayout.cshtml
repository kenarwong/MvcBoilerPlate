@{
    string role = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    string action = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
    //string title = role + " | " + action;
    string title = action;

    string userName = "User";
    string usrTxt = String.Format("Welcome {0}!", userName);
     
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@title</title>
    @Styles.Render("~/Content/pkgs")
    @Styles.Render("~/Content/style")
</head>
<body>
    <nav id="header" class="navbar navbar-inverse">
        <div class="container">
            <div class="container">
                <div id="header_logo"></div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div id="header_text_main">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })</div>
                </div>
                <div class="navbar-text pull-right">
                    @usrTxt
                    <span class="glyphicon glyphicon-user"></span>
                </div>
            </div>
            <div class="container main-nav">
                <div class="navbar-collapse collapse navbar-right text-right" role="navigation">
                    <ul class="nav navbar-nav">
                        <li class="active"><a>Link 1</a></li>
                        <li><a>Link 2</a></li>
                        <li><a>Link 3</a></li>
                    </ul>
                    @*@Html.Action("Main", "Navigation", new { activeItem = role })*@
                </div>
            </div>
            <div class="container sub-nav">
                <div class="navbar-collapse collapse navbar-right" role="navigation">
                    <ul class="nav navbar-nav">
                        <li><a>Sub Link 1</a></li>
                        <li><a>Sub Link 2</a></li>
                        <li><a>Sub Link 3</a></li>
                    </ul>
                    @*@Html.Action("SubNav", "Navigation", new { role = role, activeItem = action })*@
                </div>
            </div>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/libs")
    @RenderSection("page", required: false)
</body>
</html>
